<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="numpadNumbers">
        <item name="android:textColor">#000</item>
        <item name="android:background">#FFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="disabledNumbers">
        <item name="android:background">#BFBFBF</item>
    </style>
    <style name="widgetText">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:padding">35sp</item>
    </style>
    <style name="buttonStyles">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#34495E</item>
    </style>
</resources>
